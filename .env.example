# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development
DEBUG=True

# MongoDB Configuration
# Option 1: Local MongoDB
MONGODB_URL=mongodb://localhost:27017
# Option 2: MongoDB Atlas (replace with your connection string)
# MONGODB_URL=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/

DATABASE_NAME=org_management

# JWT Configuration
SECRET_KEY=change-this-to-a-secure-random-string-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=DEBUG
